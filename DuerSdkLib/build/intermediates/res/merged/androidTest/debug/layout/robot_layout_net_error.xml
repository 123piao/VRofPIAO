<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/id_net_error_img"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ui_robot_net_error_icon"
        android:layout_height="wrap_content" />
	<TextView
	    android:id="@+id/id_error_tips"
	    android:layout_marginTop="30dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#888888"
	    android:text="网络无法连接"
	    android:gravity="center"
	    android:layout_below="@id/id_net_error_img"
	    />
	<TextView
	    android:id="@+id/id_error_tips_more"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#888888"
	    android:layout_marginTop="5dp"
	    android:text="请检查你的手机是否联网"
	    android:gravity="center"
	    android:layout_below="@id/id_error_tips"
	    />
    <Button
        android:id="@+id/id_reload_btn"
        android:layout_below="@id/id_error_tips_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/robot_btn_style"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="再试一次"
        android:textColor="@color/ui_robot_press_btn_selector"
        android:textSize="18sp"
         />
    <Button
        android:id="@+id/id_close_btn"
        android:layout_below="@id/id_reload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/robot_btn_style"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="关闭页面"
        android:textColor="@color/ui_robot_press_btn_selector"
        android:visibility="gone"
        android:textSize="18sp"
         />
</RelativeLayout>