<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:background="#F8F8F8"
              android:orientation="vertical"
              android:id="@+id/id_music_content_layout"
              android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
       >

        <ImageView
            android:id="@+id/musicControlView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"/>

        <LinearLayout
            android:id="@+id/linearControlView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center|right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeMusicStatusView"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|right">

                <ImageView
                    android:id="@+id/musicStatusView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/music_start_btn"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeCloseView"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/musicCloseView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/music_close_btn"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/musicTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/linearControlView"
            android:layout_toRightOf="@+id/musicControlView"
            android:gravity="center_vertical"
            android:singleLine="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8"/>

</LinearLayout>
