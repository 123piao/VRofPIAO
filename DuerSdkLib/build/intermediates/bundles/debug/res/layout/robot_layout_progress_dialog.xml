<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="134dp"
    android:layout_height="44dp"
    android:background="@drawable/ui_progress_bar_bg">
    
    <ProgressBar
        android:id="@+id/id_progress_cir"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"

        style="?android:attr/progressBarStyleInverse"
        android:indeterminateDrawable="@drawable/ui_progress_dialog_bar"/>

    <TextView
        android:id="@+id/id_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/id_progress_cir"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:text="正在加载..."/>
    <TextView
        android:layout_width="16dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/id_progress_title"/>
</RelativeLayout>