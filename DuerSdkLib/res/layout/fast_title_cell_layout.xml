<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="#00000000"
    android:orientation="vertical"
    
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_text_content_layout"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/show_time_view"
            style="@style/text_show_time_style"
            />

        <ImageView
            android:id="@+id/id_head_icon"
            android:layout_width="@dimen/robot_icon_width_height"
            android:layout_height="@dimen/robot_icon_width_height"
            android:layout_below="@+id/show_time_view"
            android:contentDescription="@null"
            android:src="@drawable/robot_fast_menu_logo_icon"/>

        <TextView
            android:id="@+id/id_text_content"
            android:textSize="15dp"
            android:textColor="#363942"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_head_icon"
            android:layout_below="@+id/show_time_view"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/id_head_icon"
            android:background="@drawable/robot_fast_left_chat_new_bg"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:textColorLink="#379FFF"/>
    </RelativeLayout>
</RelativeLayout>
