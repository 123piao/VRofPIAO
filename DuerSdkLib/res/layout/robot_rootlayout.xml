<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_chat_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/robot_bk_color"
    >


    <com.baidu.robot.uicomlib.title.TitleLayout
        android:layout_width="match_parent"
        android:id="@+id/ui_id_title_layout"
        android:layout_height="wrap_content">

    </com.baidu.robot.uicomlib.title.TitleLayout>
  

    <com.baidu.robot.uicomlib.tabhint.view.drawer.BottomDrawerLayout
        android:id="@+id/id_chat_root_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/robot_bk_color"
        android:layout_below="@id/ui_id_title_layout"
        
        >

        <com.baidu.robot.uicomlib.tabhint.view.base.ContentView
            android:id="@+id/id_chatListView_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/float_hint_layout"
            android:layout_below="@+id/id_setting_top_div"
            >
       </com.baidu.robot.uicomlib.tabhint.view.base.ContentView>
        
    </com.baidu.robot.uicomlib.tabhint.view.drawer.BottomDrawerLayout>

    <com.baidu.robot.ttswidget.TTSLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tts_layout"
        android:layout_alignParentRight="true">

    </com.baidu.robot.ttswidget.TTSLayout>
    <ViewStub
        android:layout_width="match_parent"
        android:id="@+id/id_music_stub"
        android:layout_below="@id/ui_id_title_layout"
        android:layout="@layout/ui_layout_music_bar"
        android:layout_height="44dp"/>
    <!--<include-->
        <!--android:id="@+id/hw_welcome_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone"-->
        <!--layout="@layout/huawei_first_time_start_layout"/>-->
    

</RelativeLayout>


